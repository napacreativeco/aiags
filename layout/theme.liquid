      font-style: normal;
      font-display: swap;
    }

  </style>
  {{ 'application.css' | asset_url | stylesheet_tag }}
  {{ 'component-cart-notification.css' | asset_url | stylesheet_tag }}
  {{ 'component-form.css' | asset_url | stylesheet_tag }}
  {{ 'component-gallery.css' | asset_url | stylesheet_tag }}
  {{ 'component-modal.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-quantity.css' | asset_url | stylesheet_tag }}
  {{ 'component-slideout.css' | asset_url | stylesheet_tag }}
  {{ 'section-product.css' | asset_url | stylesheet_tag }}
  {{ 'section-footer.css' | asset_url | stylesheet_tag }}

</head>
<body id="{{ page_title | handle }}" class="template-{{ template.name | handle }}">

{% if template.name != 'password' %}
  {% section 'header' %}
{% endif %}

{%- include 'component--slideout' -%}

<main role="main">
  {{ content_for_layout }}
</main>

{%comment%}
{% if template.name != 'password' %}
  {% section 'footer' %}
{% endif %}
{%endcomment%}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
<script>
  (function($) {
    $('.sizing_chart_link').on('click', function(e) {
      console.log('clicked');

      $('.sizing-chart__modal').css({
        display: 'block'
      })
    });

    $('.sizing-chart__modal').on('click', function(e) {
      console.log('clicked');
      if (e.target == this){
        $('.sizing-chart__modal').css({
          display: 'none'
        })
      }
    });
  })(jQuery);

  (function($) {
    $('.hamburger').on('click', function(e) {

      $('.slideout-menu__container').css({
        display: 'block'
      })
    });

    $('.slideout-menu__container').on('click', function(e) {

      if (e.target == this) {
        $('.slideout-menu__container').css({
          display: 'none'
        })
      }
    });
  })(jQuery);
</script>

<script>
  (function($) {
      $('.inch-switch').on('click', function() {
          if ($('.inches').hasClass('active-switch')) {
              $('.inches').removeClass('active-switch');
              $('.centimeters').addClass('active-switch');
          } else {
              $('.inches').addClass('active-switch');
              $('.centimeters').removeClass('active-switch');
          }
      });
  })(jQuery);
</script>


<script>
  window.shopUrl = '{{ request.origin }}';

  window.routes = {
    cart_add_url: '{{ routes.cart_add_url }}',
    cart_change_url: '{{ routes.cart_change_url }}',
    cart_update_url: '{{ routes.cart_update_url }}'
  };

  window.cartStrings = {
    error: `{{ 'sections.cart.cart_error' | t }}`,
    quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
  }

  window.variantStrings = {
    addToCart: `{{ 'products.product.add_to_cart' | t }}`,
    soldOut: `{{ 'products.product.sold_out' | t }}`,
    unavailable: `{{ 'products.product.unavailable' | t }}`,
  }

</script>