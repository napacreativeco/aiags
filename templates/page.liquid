<div class="page-container container-fluid">
	<div class="page-row row">

		<div class="page-col__left hide-less-than-lg col-lg-2 display-flex-justify-space-between padding-bottom-2rem">

			{%comment%}
			*
			* Sidebar: Top
			*
			{%endcomment%}
			<div class="list-unstyled sidebar sidebar-top">
				<ul>
				{% for link in linklists.main-menu.links %}
					{% if link.links != blank %}
					<li class="sidebar-link {% if link.current or link.child_current %}current{% endif %} nav-item-has-children">
						<a href="{{ link.url }}">
						{{ link.title }} 
						</a>
						<ul>
						{% for childlink in link.links %}
							<li class="sidebar-link--sub {% if link.active %}current{% endif %}">
							<a href="{{ childlink.url }}">
								{{ childlink.title }}
							</a>
							</li>
						{% endfor %}
						</ul>
					</li>
					{% else %}
					<li class="sidebar-link {% if link.active %}current{% endif %}">
						<a href="{{ link.url }}">
						{{ link.title }}
						</a>
					</li>
					{% endif %}
				{% endfor %}
				</ul> 
			</div>

			{%comment%}
			*
			* Sidebar: Bottom
			*
			{%endcomment%}
			<div class="list-unstyled sidebar sidebar-bottom">
				<ul>
				{% for link in linklists['footer'].links -%}
					{% if link.links != blank %}
					<li class="sidebar-link {% if link.current or link.child_current %}current{% endif %} nav-item-has-children">
						<a href="{{ link.url }}">
						{{ link.title }} 
						</a>
						<ul>
						{% for childlink in link.links %}
							<li class="sidebar-link--sub {% if link.active %}current{% endif %}">
							<a href="{{ childlink.url }}">
								{{ childlink.title }}
							</a>
							</li>
						{% endfor %}
						</ul>
					</li>
					{% else %}
					<li class="sidebar-link {% if link.active %}current{% endif %}">
						<a href="{{ link.url }}">
						{{ link.title }}
						</a>
					</li>
					{% endif %}
				{% endfor %}
				</ul> 
			</div>
		</div>
  
		<div class="page-col__center padding-bottom-2rem col-xs-12 col-sm-6 col-lg-5">
			<div class="page-column__right col-xs-12 col-sm-7 justify-end-sm">
                {{ page.metafields.custom.center_section }}
			</div>
		</div>

		<div class="page-col__right padding-bottom-2rem col-xs-12 col-sm-6 col-lg-5">
			<div class="single-page__content-wrapper">
				<h1>{{ page.title }}</h1>
				<div>{{ page.content }}</div>
			</div>
		</div>


	</div>
</div>
